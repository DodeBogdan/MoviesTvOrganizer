<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviestvorganizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesTvOrganizer">
        <activity android:name=".ui.tvShow.EditTvShow"></activity>
        <activity android:name=".ui.tvShow.TvShowActivity" />
        <activity android:name=".ui.tvShow.AddTvShow" />
        <activity android:name=".ui.movies.EditMovie" />
        <activity android:name=".ui.movies.AddMovie" />
        <activity android:name=".ui.movies.MovieActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoviesTvOrganizer.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>